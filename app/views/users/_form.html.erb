<% action_url = (action == "login" ? session_url : users_url) %>
<% text = (action == "login" ? "LOG IN" : "SIGN UP") %>


<h1><%= text %></h1>

<form class="" action="<%= action_url %>" method="post">
  
  <label for="username">Username: </label>
  <input
  type="text"
  name="user[username]"
  id="username"
  value="<%= user.username %>">
  <br>
  
  <label for="password">Password: </label>
  <input
  type="password"
  name="user[password]"
  id="password"
  value="<%= user.password %>">
  
  <input type="submit" value="<%= text %>">
</form>